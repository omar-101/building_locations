<%= turbo_frame_tag "new_location_modal" do %>
  <div class="modal fade show" id="exampleModalCenter" style="display: block;" data-controller="new-location-modal" >
    <div class="modal-dialog modal-dialog-centered">
      <div class="modal-content rounded-0">
        <div class="modal-body bg-3">
          <% if @location.errors %>
            <div class="errors">
              <% @location.errors.full_messages.each do |error_message| %>
                <p><%= error_message %></p>
              <% end %>
            </div>
          <% end %>
          <div class="p-4 to-front">
            <div class="text-center">
              <h3>Create location</h3>
              <%= form_with model: @location do |f| %>
                <div class="form-group">
                  <%= f.label :country, "Country" %>
                  <%= f.text_field :country, class: "form-control w-100 mr-3" %>
                </div>
                <div class="form-group">
                  <%= f.label :city, "City" %>
                  <%= f.text_field :city, class: "form-control w-100 mr-3" %>
                </div>
                <div class="form-group">
                  <%= f.label :area, "Area" %>
                  <%= f.text_field :area, class: "form-control w-100 mr-3" %>
                </div>
                <div class="form-group">
                  <%= f.label :street, "Street" %>
                  <%= f.text_field :street, class: "form-control w-100 mr-3" %>
                </div>
                <div class="form-group">
                  <%= f.label :building_number, "Building Number" %>
                  <%= f.number_field :building_number, class: "form-control w-100 mr-3" %>
                </div>
                <div class="form-group">
                  <%= f.label :full_address, "Full address" %>
                  <%= f.text_field :full_address, class: "form-control w-100 mr-3" %>
                </div>
                <div class="row">
                  <div class="modal-actions">
                    <button type="button" class="btn btn-secondary" data-action="click->new-location-modal#handleClose">Close</button>
                    <%= f.submit "Create", class: "btn btn-primary" %>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>